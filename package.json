{
  "name": "padel-game-manager",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "db:migrate": "cd apps/api && pnpm prisma migrate dev",
    "db:seed": "cd apps/api && pnpm prisma db seed",
    "db:studio": "cd apps/api && pnpm prisma studio",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "lint": "turbo run lint",
    "prepare": "husky install"
  },
  "dependencies": {
    "@auth/core": "latest",
    "@nestjs/common": "latest",
    "@nestjs/config": "latest",
    "@nestjs/core": "latest",
    "@nestjs/jwt": "latest",
    "@nestjs/microservices": "latest",
    "@nestjs/passport": "latest",
    "@nestjs/platform-express": "latest",
    "@nestjs/websockets": "latest",
    "@padel/types": "latest",
    "@prisma/client": "latest",
    "@tanstack/react-query": "latest",
    "bcryptjs": "latest",
    "class-transformer": "latest",
    "class-validator": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.454.0",
    "next": "16.0.1",
    "next-auth": "latest",
    "nodemailer": "latest",
    "passport": "latest",
    "passport-jwt": "latest",
    "prisma": "latest",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "reflect-metadata": "latest",
    "rxjs": "latest",
    "seedrandom": "latest",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "latest"
  },
  "devDependencies": {
    "@turbo/gen": "^2.3.3",
    "@types/node": "^22",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "postcss": "^8.5",
    "prettier": "^3.4.2",
    "tailwindcss": "4.1.16",
    "turbo": "^2.3.3",
    "typescript": "^5"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}